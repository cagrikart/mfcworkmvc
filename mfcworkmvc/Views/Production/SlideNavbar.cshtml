         <div class="container" style="width:300px;margin-left:150px;">
            <div class="card-custom">
               <img src="~/images/100+.png" alt="...">
               <div class="text-block">
                  <span style="font-size:40px;font-weight:bold">100+</span>
                  <br/>
                  <span>bitirilmiş proje</span>
               </div>
            </div>
         </div>
      </div>
      <div class="split-right">
         <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
               <div class="carousel-item active">
                  <img src="~/images/Ekran görüntüsü 2024-03-24 222023.png" alt="Mimari">

               </div>
               <div class="carousel-item">
                  <img src="~/images/Ekran görüntüsü 2024-03-24 222023.png" alt="Mimari">
               </div>
               <div class="carousel-item">
                  <img src="~/images/Ekran görüntüsü 2024-03-24 222034.png"  alt="Mimari">
               </div>
            </div>
         </div>
      </div>
      </div>
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
      <script>
         var carouselTexts = [
           {
             heading: "Building   Beyond Boundaries",
           },
           {
             heading: "Turning Ideas into Digital Reality",
           },
           {
             heading: "Secure Your Trust,Project Your Future!",
           }
         ];
         console.log("denemee "+carouselTexts)
         $('#carouselExampleControls').on('slid.bs.carousel', function (event) {
           var currentIndex = $('.carousel-item.active').index();
           var currentText = carouselTexts[currentIndex];
           $('#carousel-heading').text(currentText.heading);
           $('#carousel-text').text(currentText.text);
           $('#carousel-projects').text(currentText.projects);
         });
      </script>
   </body>
</html>