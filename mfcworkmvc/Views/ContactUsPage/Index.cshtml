                <button class="custom-btn">
                    <span>hello@liquid-themes.com</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0z" />
                    </svg>
                </button>
                <button class="custom-btn">
                    <span>290 Maryam Springs 260<br>Courbevoie, Paris</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0z" />
                    </svg>
                </button>
                <div style="margin-top: 20px;">
                    <i class=" contact-icons fa-brands fa-facebook-f"></i>
                    <i class=" contact-icons fa-brands fa-instagram"></i>
                    <i class=" contact-icons fa-brands fa-square-twitter"></i>
                </div>
            </div>

            <div class="col-lg-6">
                <form class="contact-form">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="labelContact">İsim Soyisim </label>
                            <input type="text" style="border-radius: 25px;" class="form-control" placeholder="Yazınız... ">
                        </div>
                        <div class="col-md-6">
                            <label class="labelContact">Email Adresi </label>
                            <input type="email" style="border-radius: 25px;" class="form-control" placeholder="Yazınız...">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="labelContact">Telefon  </label>
                            <input type="tel" style="border-radius: 25px;" class="form-control" placeholder="Yazınız...">
                        </div>
                        <div class="col-md-6">
                            <label class="labelContact">Konu  </label>
                            <input type="text" style="border-radius: 25px;" class="form-control" placeholder="Yazınız...">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="labelContact">Mesajınız </label>
                        <textarea class="form-control" style="border-radius: 25px;" rows="5" placeholder="Lütfen mesajınızı buraya yazınız"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
