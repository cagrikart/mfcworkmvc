        .header-content {
            text-align: center;
            margin-bottom: 40px;
        }

        .blog-header {
            font-size: 2.5rem;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            border-radius: 20px;
        }

        .card-img-top {
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        .card-body {
            border-bottom-left-radius: 20px;
            border-bottom-right-radius: 20px;
            padding: 20px;
        }

        .btn-custom {
            border: 1px solid black;
            border-radius: 20px;
            padding: 5px 30px;
            font-size: 0.9rem;
        }

        .blog-text {
            padding: 0 15px;
        }

            .blog-text p {
                text-align: justify;
            }

        .arrow-icon {
            display: inline-block;
            margin-left: 10px;
        }

        .blog-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-custom {
            border-radius: 15px;
            /* Yuvarlatılmış kenarlar */
            overflow: hidden;
            /* İçerik dışarı taşarsa kes */
            border: 2px solid rgba(0, 0, 0, 0.2);
            /* Daha belirgin bir kenarlık */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            /* Hafif bir gölge efekti */
            margin: auto;
            padding: 15px;
        }

        .footer {
            background: #f8f9fa;
            padding: 2rem 0;
        }

        .footer-logo {
            font-size: 2rem;
            font-weight: bold;
        }

        .footer-column {
            margin-bottom: 1rem;
        }

        .nav-link {
            color: black;
            text-decoration: none;
        }

            .nav-link:hover {
                color: black;
                text-decoration: none;
            }
    </style>
</head>
