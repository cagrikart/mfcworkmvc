@model List<Customer>
@{
    ViewData["Title"] = "Index";
    int counterHeader = 0;
    int counterBody = 0;
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<ul class="nav nav-tabs" id="customerTabs" role="tablist">
    @foreach (var customer in Model)
    {
        <li class="nav-item">
            <a class="nav-link @(counterHeader == 0 ? "active" : "")" id="customer-tab-@customer.CustomerId" data-toggle="tab" href="#customer-@customer.CustomerId" role="tab" aria-controls="customer-@customer.CustomerId" aria-selected="@(counterHeader == 0 ? "true" : "false")">@customer.CustomerName</a>
        </li>
        counterHeader++;
    }
</ul>

<div class="tab-content" id="customerTabsContent">
    @foreach (var customer in Model)
    {
        <div class="tab-pane fade @(counterBody == 0 ? "show active" : "")" id="customer-@customer.CustomerId" role="tabpanel" aria-labelledby="customer-tab-@customer.CustomerId">
            <h3>@customer.CustomerName</h3>
            <p>@customer.Description</p>
        </div>
        counterBody++;
    }
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.7.12/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Aktif tab'ı ve içeriğini doğru bir şekilde başlat
        $('#customerTabs a:first').tab('show');
    });
</script>
