@{
    ViewData["Title"] = "CreateSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SubCategory

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Add New SubCategory</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CreateSubCategory">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="form-group">
                            <label asp-for="name" class="control-label">SubCategory Name</label>
                            <input asp-for="name" class="form-control" placeholder="Enter subcategory name" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="mainCategoryId" class="control-label">Main Category</label>
                            <select asp-for="mainCategoryId" class="form-control" asp-items="ViewBag.mainCategoryId"></select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
