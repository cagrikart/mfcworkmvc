@{
    ViewData["Title"] = "Index";
}
@model List<Product>
<style>
    .container {
        padding-top: 2rem;
    }

    .text-center {
        color: #333;
    }

    .table {
        box-shadow: 0 2px 2px rgba(0,0,0,.1);
        margin-top: 20px;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

</style>
<div class="container mt-5">
    <h1 class="text-center mb-4">Product Listesi</h1>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Ürün Adı </th>
                <th>Açıklama</th>
                <th>Resim</th>
                <th>Alt Kategorisi</th>
                <th>Ana Kategorisi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.name</td>
                    <td>@product.description</td>
                    <td>
                        <img src="data:image/jpeg;base64,@product.ImageBase64" width="100" alt="Product Image" />
                    </td>
                    <td>@product.subCategory.name</td>
                    <td>@product.mainCategory.name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
